{
    "name": "erd-system-server",
    "version": "1.0.0",
    "description": "ERD System Realtime Collaboration Server",
    "main": "dist/index.js",
    "scripts": {
        "dev": "nodemon --exec ts-node src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "stop": "lsof -ti:3001,5173 -sTCP:LISTEN | xargs kill -9 || true",
        "restart": "npm run stop && npm run dev",
        "lint": "eslint src --ext .ts"
    },
    "dependencies": {
        "bcrypt": "^6.0.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "helmet": "^7.1.0",
        "ioredis": "^5.3.2",
        "jsonwebtoken": "^9.0.3",
        "mongoose": "^8.0.0",
        "nodemailer": "^8.0.1",
        "socket.io": "^4.7.2",
        "uuid": "^9.0.1",
        "winston": "^3.19.0",
        "winston-daily-rotate-file": "^5.0.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^6.0.0",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^20.10.0",
        "@types/nodemailer": "^7.0.9",
        "@types/uuid": "^9.0.7",
        "nodemon": "^3.0.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.2"
    }
}
